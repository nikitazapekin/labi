<Window x:Class="Lab10Var12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab10Var12"
        mc:Ignorable="d"
        Title="MainWindow" Height="1250" Width="1800">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" 
                   Margin="252,385,240,101">
            <Canvas x:Name="MainCanvas" Background="LightGray" 
                 Width="1400" Height="800"
                 Cursor="SizeAll">
                <TextBlock Panel.ZIndex="3" x:Name="GraphTitle" Canvas.Left="20" Canvas.Top="20"
                        FontSize="22" TextWrapping="Wrap" Text="Циклоида" />
                <Image x:Name="BackgroundImage"  
                    Stretch="Fill"
                    Panel.ZIndex="0"
    Canvas.Left="46" Canvas.Top="126"
    Width="{Binding ActualWidth, ElementName=MainCanvas}"
    Height="{Binding ActualHeight, ElementName=MainCanvas}"
                    />

            </Canvas>
        </ScrollViewer>

        <StackPanel Margin="145,10,20,0" VerticalAlignment="Top" Orientation="Horizontal">
            <StackPanel Margin="10" Orientation="Vertical">
                <TextBlock FontSize="32" Text="График" FontWeight="Bold" Foreground="#3A3A3A" Width="243"/>
                <Button Click="handleDraw" FontSize="22" Margin="0,10,0,0" 
                Content="Построить" 
               BorderThickness="1"
                Height="40" Cursor="Hand" />
                <Button Click="drawDelegate" FontSize="22" Margin="0,10,0,0" 
                Content="Построить с делегатом" 
                BorderThickness="1"
                Height="40" Cursor="Hand" Width="266" />
            </StackPanel>

            <StackPanel Margin="10" Orientation="Vertical" RenderTransformOrigin="0.5,0.5" Width="407">
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.484"/>
                        <RotateTransform/>
                        <TranslateTransform Y="0.492"/>
                    </TransformGroup>
                </StackPanel.RenderTransform>
                <TextBlock FontSize="22" Text="Цвет линии:" Margin="10,0" Foreground="#3A3A3A"/>
                <ComboBox FontSize="22" x:Name="LineColorComboBox" Margin="10" 
                  SelectionChanged="graphColor" 
                  Background="#FAFAFA" BorderBrush="#BDBDBD" BorderThickness="1">
                    <ComboBoxItem Content="Синий" />
                    <ComboBoxItem Content="Красный" />
                    <ComboBoxItem Content="Черный" />
                </ComboBox>
                <TextBlock FontSize="22" Text="Размер графика:" Margin="10,0" Foreground="#3A3A3A"/>
                <TextBox FontSize="22" x:Name="GraphScaleTextBox" Margin="10" Padding="5" TextChanged="graphScale"
                 Background="#FAFAFA" BorderBrush="#BDBDBD" BorderThickness="1" Height="35"/>
                <TextBlock FontSize="22" Text="Толщина линии:" Margin="10,0" Foreground="#3A3A3A"/>
                <TextBox FontSize="22" x:Name="GraphWidthTextBox" Margin="10" Padding="5" TextChanged="graphWidth"
                 Background="#FAFAFA" BorderBrush="#BDBDBD" BorderThickness="1" Height="35"/>
            </StackPanel>

            <StackPanel Margin="10" Orientation="Vertical" Width="242">
                <TextBlock FontSize="32" Text="Текст" Margin="0,0,0,10" FontWeight="Bold" Foreground="#3A3A3A"/>
                <TextBlock FontSize="22" Text="Содержимое:" Margin="10,0" Foreground="#3A3A3A"/>
                <TextBox FontSize="22" x:Name="TextValue" Margin="10" Padding="5" TextChanged="graphText"
                 Background="#FAFAFA" BorderBrush="#BDBDBD" BorderThickness="1" Height="35"/>
                <TextBlock FontSize="22" Text="Цвет текста:" Margin="10" Foreground="#3A3A3A"/>
                <ComboBox FontSize="22" x:Name="TextColor" Margin="10" SelectionChanged="textColor" 
                  Background="#FAFAFA" BorderBrush="#BDBDBD" BorderThickness="1">
                    <ComboBoxItem Content="Синий" />
                    <ComboBoxItem Content="Красный" />
                    <ComboBoxItem Content="Черный" />
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="10" Orientation="Vertical" Width="442">
                <TextBlock FontSize="22" Text="Шрифт текста:" Margin="10" Foreground="#3A3A3A"/>
                <ComboBox FontSize="22" x:Name="TextFont" Margin="10" SelectionChanged="textFont" 
                  Background="#FAFAFA" BorderBrush="#BDBDBD" BorderThickness="1"/>
                <TextBlock FontSize="22" Text="Толщина текста:" Margin="10" Foreground="#3A3A3A"/>
                <ComboBox FontSize="22" x:Name="TextWeight" Margin="10" SelectionChanged="textWeight" 
                  Background="#FAFAFA" BorderBrush="#BDBDBD" BorderThickness="1"/>
                <Button FontSize="22" Margin="0,10,0,0" 
                Content="Фон для холста" 
                Click="AddBackground"
               BorderThickness="1"
                Height="40" Cursor="Hand" />
                <Button FontSize="22" Margin="0,10,0,0" 
                Content="Сохранить изображение" 
                Click="handleDownload"
               BorderThickness="1"
                Height="40" Cursor="Hand" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
